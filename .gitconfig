[color]
    diff = auto
    status = auto
    branch = auto

[user]
    name = Rik
    email = gitaarik@gmail.com

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[core]
    editor = vim

[alias]
    ad = add
    ada = add --all
    br = branch
    ci = commit
    cl = clone
    clr = clone --recursive
    co = checkout
    di = diff
    dic = diff --cached
    dif = diff --name-status
    dit = difftool
    fe = fetch
    lg = log
    lgo = log --oneline
    lgf = log --graph --date=relative --topo-order --pretty='format:%C(yellow)%h%C(yellow)%d %Cblue%ar %Cgreenby %an%Creset -- %s'
    ls = ls-files
    mr = merge
    pl = pull
    pla = pull --recurse-submodules && submodule update --init --recursive
    ps = push
    sh = stash
    st = status
    sm = submodule
    smu = submodule update --init --recursive

[push]
    default = simple
