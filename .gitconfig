[color]
    diff = auto
    status = auto
    branch = auto

[user]
    name = Rik
    email = gitaarik@gmail.com

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[core]
    editor = vim

[alias]
    ad = add
    ada = add --all
    br = branch
    ci = commit
    cl = clone
    clr = clone --recursive
    co = checkout
    di = diff
    dic = diff --cached
    dif = diff --name-status
    dit = difftool
    fe = fetch
    lg = log
    lgo = log --oneline
    ls = ls-files
    mr = merge
    pl = pull
    plr = pull --recurse-submodules
    ps = push
    sh = stash
    st = status

[push]
    default = simple
