[color]
    diff = auto
    status = auto
    branch = auto

[user]
    name = Rik
    email = gitaarik@gmail.com

[branch]
    autosetuprebase = always

[merge]
    tool = vimdiff

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[core]
    editor = vim

[alias]
    ad = add
    ada = add --all
    br = branch
    ci = commit
    cl = clone
    clr = clone --recursive
    co = checkout
    di = diff
    dis = diff --staged
    dic = diff --cached
    dif = diff --name-status
    dit = difftool
    fe = fetch
    lg = log
    lgo = log --oneline
    lgf = log --graph --date=relative --topo-order --pretty='format:%C(yellow)%h%C(yellow)%d %Cblue%ar %Cgreenby %an%Creset -- %s'
    ls = ls-files
    mr = merge
    mt = mergetool
    pl = !git pull && git submodule update --init --recursive
    pla = !git pull --recurse-submodules && git submodule update --init --recursive
    ps = push
    sh = stash
    st = status -sb
    sm = submodule
    smu = submodule update --init --recursive
	alias = config --get-regexp ^alias\\.
	springcleaning = for-each-ref --sort=-committerdate --format='%(refname:short) %(committerdate:short)'

[push]
	default = tracking
